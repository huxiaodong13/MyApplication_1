<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:text="借阅编号"
                android:textSize="20sp" android:id="@+id/person_tvBorrowId"/>
            <EditText
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp" android:id="@+id/person_etBorroId"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <TextView
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:text="工作编号"
                    android:textSize="20sp" android:id="@+id/person_tvWorkId"/>
            <EditText
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp" android:id="@+id/person_etWorkId"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <TextView
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:text="姓名"
                    android:textSize="20sp" android:id="@+id/person_tvName"/>
            <EditText
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp" android:id="@+id/person_etName"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <TextView
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:text="部门"
                    android:textSize="20sp" android:id="@+id/person_tvHome"/>
            <EditText
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp" android:id="@+id/person_etHome"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <TextView
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:text="办证日期"
                    android:textSize="20sp" android:id="@+id/person_tvDate"/>
            <EditText
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp" android:id="@+id/person_etDate"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <TextView
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:text="联系方式"
                    android:textSize="20sp" android:id="@+id/person_tvPhone"/>
            <EditText
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp" android:id="@+id/person_etPhone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/person_btnRegister"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="确定" />

            <Button
                android:id="@+id/person_btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/person_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回" />

</RelativeLayout>
